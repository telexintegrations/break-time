// /break-time/tsconfig.json
{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		// Remove rootDir to allow files outside src/
		// "rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"]
		}
	},
	"include": ["src/**/*", "__test__/**/*"],
	"exclude": ["node_modules", "dist"]
}
